@model IEnumerable<TranHoaiSon_19DH110901_Lab4_LTWNC.Models.ITEM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.ItemName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ItemPrice)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ItemImageName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.CATEGORY.CategoryName)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.ItemName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ItemPrice)
			</td>
			<td>
				<img src=@item.ItemImageName width="150px" ; height="120px" />

			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CATEGORY.CategoryName)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.ItemId }) |
				@Html.ActionLink("Details", "Details", new { id = item.ItemId }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.ItemId })
			</td>
		</tr>
	}

</table>
